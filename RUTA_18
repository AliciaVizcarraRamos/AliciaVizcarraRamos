                            System.out.println("Llegaste a plaza de armas");
                        } else if (km <= 25) {
                            System.out.println("Llegaste a parque cholo");
                        } else if (km <= 35) {
                            System.out.println("Llegaste al desvio");

                        } else if (km <= 40) {
                            System.out.println("Llegaste a la UPEU");
                        }
                        System.out.println("quiere retornar? SI/NO");
                        String si = vizcarra.nextLine();
                        si = vizcarra.nextLine();
                        if (si.equals("si") || si.equals("SI")) {
                            System.out.println("Ingrese su pasaje en soles por favor");
                            pasaje = vizcarra.nextInt();
                            if (pasaje == 0) {
                                System.out.println("Ingrese su pasaje por favor\n//No vas a viajar gratis :D");
                                pasaje = vizcarra.nextInt();
                            } else if (pasaje >=1) {
                                System.out.println("¿De cuantas personas me voy a cobrar el pasaje?");
                                pasajeros = vizcarra.nextInt();
                                if (pasaje >=0) {
                                    int vueltos = pasajeros - pasaje;
                                    System.out.println("Tu vuelto es " + vueltos);
                                    if (vueltos <= 0) {
                                        System.out.println("ingrese retorno");
                                        double kmm = vizcarra.nextDouble();
                                        double k = km - kmm;
                                        for (i = 0; i <= kmm; i++) {

                                            if (k <= 10) {

                                                System.out.println("  __");
                                                System.out.println(" /|||\\`.__");
                                                System.out.println("(   _    _ _\\");
                                                System.out.println("=`-()--()-'");
                                                System.out.println("     o  o");
                                                System.out.println("avanzandooo agarrate que te caes");

