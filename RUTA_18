                                            System.out.println("LLEGAMOS A lA PLAZA BOLOGNESI");
                                        } else if (k <= 15) {
                                            System.out.println("LLEGAMOS A PLAZA DE ARMAS");
                                        } else if (k <= 25) {
                                            System.out.println("LLEGAMOS PARQUE CHOLO");
                                        } else if (k <= 35) {
                                            System.out.println("LLEGAMOS AL DESVIO");
