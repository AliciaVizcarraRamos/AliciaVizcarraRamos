                                System.out.println("  __");
                                System.out.println(" /|||\\`.__");
                                System.out.println("(   _    _ _\\");
                                System.out.println("=`-()--()-'");
                                System.out.println("     o  o");
                                System.out.println("avanzandooo agarrate que te caes");

                            } else if (km <= 35) {
                                System.out.println("  __");
                                System.out.println(" /|||\\`.__");
                                System.out.println("(   _    _ _\\");
                                System.out.println("=`-()--()-'");
                                System.out.println("     o  o");
                                System.out.println("avanzandooo agarrate que te caes");

                            } else if (km <= 40) {
                                System.out.println("  __");
                                System.out.println(" /|||\\`.__");
                                System.out.println("(   _    _ _\\");
                                System.out.println("=`-()--()-'");
                                System.out.println("     o  o");
                                System.out.println("avanzandooo agarrate que te caes");

                            }

