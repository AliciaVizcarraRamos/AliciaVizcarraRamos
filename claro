        sc.nextLine();
        switch (cat) {
            case 1:
                this.Apple();
            case 2:
                this.Samsung();
            case 3:
                this.Honor();
            default:
                System.out.println("Opcion no valida");
                this.fCambiate_renueva_a_claro();
                break;
        }
    }

