    public String fgeneral() {
        System.out.println("=============================\nTENEMOS LO QUE ESTAS BUSCANDO\n=============================");
        for (int i = 0; i < mainMenu.length; i++) {
            System.out.println((i + 1) + ". " + mainMenu[i]);
        }
        int opcion = sc.nextInt();
        sc.nextLine();
        switch (opcion) {
            case 1:
                this.fequipos();
            case 2:
                this.fpostpago();
            case 3:
                this.fclarohogar();
            case 4:
                this.fpaquetesPrepago();
                break;
            default:
                System.out.println("Opcion no valida");
                this.fgeneral();
                break;
        }
        return "";
    }

    public String fequipos() {
        System.out.println("Catálogo de Celulares Y Equipos | Tienda Claro Online");
        for (int i = 0; i < equiposMenu.length; i++) {
            System.out.println((i + 1) + ". " + equiposMenu[i]);
        }
        int opcion = sc.nextInt();
        sc.nextLine();
        switch (opcion) {
            case 1:
            case 2:
                this.fCambiate_renueva_a_claro();
                break;
            case 3:
                this.fAccesorios();
                break;
            default:
                System.out.println("Opcion no valida");
                this.fequipos();
                break;
        }
        return "Seleccion completa";
    }

    public void fCambiate_renueva_a_claro() {
