    private static void fsolicitarDatosCompra(double totalPagar) {
        Scanner sc = new Scanner(System.in);
        sc.nextLine();

        System.out.println("Ingrese  sus datos para generar la boleta de compra:");
        System.out.print("==NOMBRES==\n");
        String nombres = sc.nextLine();
        System.out.print("==APELLIDOS==\n");
        String apellidos = sc.nextLine();
        System.out.println("==CORREO==");
        String correo = sc.nextLine();
        System.out.print("==N° DNI==\n");
        int dni = sc.nextInt();
        System.out.print("==NÚMERO DE TARJETA DE CREDITO O DEBITO (8 dígitos)==\n");
        int tarjeta = sc.nextInt();
        fgenerarBoleta(nombres, apellidos, correo, dni, tarjeta, totalPagar);

    }

    private static void fgenerarBoleta(String nombres, String apellidos, String correo, int dni, int tarjeta, double totalPagar) {
        double igv = totalPagar * 0.18;
        double subtotal = totalPagar - igv;
        System.out.println("\n=====        BOLETA DE COMPRA        =====");
        System.out.println("Nombres:                " + nombres);
        System.out.println("Apellidos:              " + apellidos);
        System.out.println("Correo:                 " + correo);
        System.out.println("N° DNI:                 " + dni);
        System.out.println("Número de tarjeta:      " + tarjeta);
        System.out.println("Subtotal:               S/" + subtotal);
        System.out.println("IGV(18% :               S/" + igv);
        System.out.println("Total a pagar:          S/" + totalPagar);
        System.out.println("==========================================\n");
        System.out.println("La boleta ha sido generada.");
        System.exit(0);
    }


    public static void main(String[] args) {
        System.out.println("==CLARO==");

        CLARO men = new CLARO();
        men.fgeneral();
    }
