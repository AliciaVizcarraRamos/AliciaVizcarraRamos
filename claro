        sc.nextLine();
        if (apple >= 1 && apple <= appleprod.length) {
            double precio = applepre[apple - 1];
            System.out.println("Seleccionaste: " + appleprod[apple - 1]);
            System.out.println("Ingrese otra vez la opcion elegida");
            this.fsolicitarDatosCompra(precio);
        } else {
            System.out.println("Opcion no valida");
            this.Apple();
        }
    }

